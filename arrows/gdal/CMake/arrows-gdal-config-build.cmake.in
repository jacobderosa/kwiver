# Export definitions for kwiver to be used from find_package
#include("${CMAKE_CURRENT_LIST_DIR}/arrows-gdal-config-targets.cmake")

# KWIVER version
set(ARROWS_GDAL_VERSION_MAJOR @ARROWS_GDAL_VERSION_MAJOR@)
set(ARROWS_GDAL_VERSION_MINOR @ARROWS_GDAL_VERSION_MINOR@)
set(ARROWS_GDAL_VERSION_PATCH @ARROWS_GDAL_VERSION_PATCH@)
set(ARROWS_GDAL_VERSION "@ARROWS_GDAL_VERSION@")

# GDAL include directory
set(ARROWS_GDAL_INCLUDE_DIRS
  "@ARROWS_GDAL_SOURCE_DIR@"
  "@ARROWS_GDAL_BINARY_DIR@"
  "@ARROWS_GDAL_INCLUDE_DIRS@" )

set(ARROWS_GDAL_TEST_INCLUDE_DIRS
  "@ARROWS_GDAL_SOURCE_DIR@/tests"
  )

if (WIN32)
  set(SETUP_BATCH_FILES "@SETUP_BATCH_FILES@")
  add_definitions(-DBOOST_ALL_NO_LIB)
  add_definitions(-DBOOST_PROGRAM_OPTIONS_DYN_LINK)
  if(${MSVC_VERSION} GREATER_EQUAL 1915)
    # You must acknowledge that you understand MSVC
    # resolved a byte alignment issue in this compiler.
    # We get this due to using Eigen objects and
    # allocating those objects with make_shared
    add_definitions(-D_ENABLE_EXTENDED_ALIGNED_STORAGE)
  endif()
endif ()

set(ARROWS_GDAL_DEFAULT_LIBRARY_DIR "@ARROWS_GDAL_DEFAULT_LIBRARY_DIR@")
set(ARROWS_GDAL_LIBRARY_DIR         "@ARROWS_GDAL_BINARY_DIR@/@ARROWS_GDAL_DEFAULT_LIBRARY_DIR@")
set(ARROWS_GDAL_LIBRARIES           @arrows_gdal_libs@)
set(ARROWS_GDAL_DOCUMENTATION_DIR   "@KWIVER_DOCUMENTATION_DIR@")

set(ARROWS_GDAL_CMAKE_DIR           "@ARROWS_GDAL_CMAKE_DIR@")

set(ARROWS_GDAL_DIR "@ARROWS_GDAL_BINARY_DIR@")
