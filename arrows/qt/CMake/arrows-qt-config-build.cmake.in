# Export definitions for kwiver to be used from find_package
#include("${CMAKE_CURRENT_LIST_DIR}/arrows-qt-config-targets.cmake")

# KWIVER version
set(ARROWS_QT_VERSION_MAJOR @ARROWS_QT_VERSION_MAJOR@)
set(ARROWS_QT_VERSION_MINOR @ARROWS_QT_VERSION_MINOR@)
set(ARROWS_QT_VERSION_PATCH @ARROWS_QT_VERSION_PATCH@)
set(ARROWS_QT_VERSION "@ARROWS_QT_VERSION@")

# QT include directory
set(ARROWS_QT_INCLUDE_DIRS
  "@ARROWS_QT_SOURCE_DIR@"
  "@ARROWS_QT_BINARY_DIR@"
  )

set(ARROWS_QT_TEST_INCLUDE_DIRS
  "@ARROWS_QT_SOURCE_DIR@/tests"
  )

if (WIN32)
  set(SETUP_BATCH_FILES "@SETUP_BATCH_FILES@")
  add_definitions(-DBOOST_ALL_NO_LIB)
  add_definitions(-DBOOST_PROGRAM_OPTIONS_DYN_LINK)
  if(${MSVC_VERSION} GREATER_EQUAL 1915)
    # You must acknowledge that you understand MSVC
    # resolved a byte alignment issue in this compiler.
    # We get this due to using Eigen objects and
    # allocating those objects with make_shared
    add_definitions(-D_ENABLE_EXTENDED_ALIGNED_STORAGE)
  endif()
endif ()

set(ARROWS_QT_DEFAULT_LIBRARY_DIR "@ARROWS_QT_DEFAULT_LIBRARY_DIR@")
set(ARROWS_QT_LIBRARY_DIR         "@ARROWS_QT_BINARY_DIR@/@ARROWS_QT_DEFAULT_LIBRARY_DIR@")
set(ARROWS_QT_LIBRARIES           @arrows_qt_libs@)
set(ARROWS_QT_DOCUMENTATION_DIR   "@KWIVER_DOCUMENTATION_DIR@")
set(ARROWS_QT_PLUGIN_DIR          "${ARROWS_QT_LIBRARY_DIR}/@kwiver_plugin_algorithm_subdir@")

set(ARROWS_QT_CMAKE_DIR           "@ARROWS_QT_CMAKE_DIR@")

set(ARROWS_QT_DIR "@ARROWS_QT_BINARY_DIR@")
