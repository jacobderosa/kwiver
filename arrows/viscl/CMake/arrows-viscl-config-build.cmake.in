# Export definitions for kwiver to be used from find_package
#include("${CMAKE_CURRENT_LIST_DIR}/arrows-viscl-config-targets.cmake")

# KWIVER version
set(ARROWS_VISCL_VERSION_MAJOR @ARROWS_VISCL_VERSION_MAJOR@)
set(ARROWS_VISCL_VERSION_MINOR @ARROWS_VISCL_VERSION_MINOR@)
set(ARROWS_VISCL_VERSION_PATCH @ARROWS_VISCL_VERSION_PATCH@)
set(ARROWS_VISCL_VERSION "@ARROWS_VISCL_VERSION@")

# VISCL include directory
set(ARROWS_VISCL_INCLUDE_DIRS
  "@ARROWS_VISCL_SOURCE_DIR@"
  "@ARROWS_VISCL_BINARY_DIR@"
  )

set(ARROWS_VISCL_TEST_INCLUDE_DIRS
  "@ARROWS_VISCL_SOURCE_DIR@/tests"
  )

if (WIN32)
  set(SETUP_BATCH_FILES "@SETUP_BATCH_FILES@")
  add_definitions(-DBOOST_ALL_NO_LIB)
  add_definitions(-DBOOST_PROGRAM_OPTIONS_DYN_LINK)
  if(${MSVC_VERSION} GREATER_EQUAL 1915)
    # You must acknowledge that you understand MSVC
    # resolved a byte alignment issue in this compiler.
    # We get this due to using Eigen objects and
    # allocating those objects with make_shared
    add_definitions(-D_ENABLE_EXTENDED_ALIGNED_STORAGE)
  endif()
endif ()

set(ARROWS_VISCL_DEFAULT_LIBRARY_DIR "@ARROWS_VISCL_DEFAULT_LIBRARY_DIR@")
set(ARROWS_VISCL_LIBRARY_DIR         "@ARROWS_VISCL_BINARY_DIR@/@ARROWS_VISCL_DEFAULT_LIBRARY_DIR@")
set(ARROWS_VISCL_LIBRARIES           @arrows_viscl_libs@)
set(ARROWS_VISCL_DOCUMENTATION_DIR   "@KWIVER_DOCUMENTATION_DIR@")
set(ARROWS_VISCL_PLUGIN_DIR          "${ARROWS_VISCL_LIBRARY_DIR}/@kwiver_plugin_algorithm_subdir@")

set(ARROWS_VISCL_CMAKE_DIR           "@ARROWS_VISCL_CMAKE_DIR@")

set(ARROWS_VISCL_DIR "@ARROWS_VISCL_BINARY_DIR@")
