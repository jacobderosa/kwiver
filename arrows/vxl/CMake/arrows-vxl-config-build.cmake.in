# Export definitions for kwiver to be used from find_package
#include("${CMAKE_CURRENT_LIST_DIR}/arrows-vxl-config-targets.cmake")

# KWIVER version
set(ARROWS_VXL_VERSION_MAJOR @ARROWS_VXL_VERSION_MAJOR@)
set(ARROWS_VXL_VERSION_MINOR @ARROWS_VXL_VERSION_MINOR@)
set(ARROWS_VXL_VERSION_PATCH @ARROWS_VXL_VERSION_PATCH@)
set(ARROWS_VXL_VERSION "@ARROWS_VXL_VERSION@")

# VXL include directory
set(ARROWS_VXL_INCLUDE_DIRS
  "@ARROWS_VXL_SOURCE_DIR@"
  "@ARROWS_VXL_BINARY_DIR@"
  )

set(ARROWS_VXL_TEST_INCLUDE_DIRS
  "@ARROWS_VXL_SOURCE_DIR@/tests"
  )

if (WIN32)
  set(SETUP_BATCH_FILES "@SETUP_BATCH_FILES@")
  add_definitions(-DBOOST_ALL_NO_LIB)
  add_definitions(-DBOOST_PROGRAM_OPTIONS_DYN_LINK)
  if(${MSVC_VERSION} GREATER_EQUAL 1915)
    # You must acknowledge that you understand MSVC
    # resolved a byte alignment issue in this compiler.
    # We get this due to using Eigen objects and
    # allocating those objects with make_shared
    add_definitions(-D_ENABLE_EXTENDED_ALIGNED_STORAGE)
  endif()
endif ()

set(ARROWS_VXL_DEFAULT_LIBRARY_DIR "@ARROWS_VXL_DEFAULT_LIBRARY_DIR@")
set(ARROWS_VXL_LIBRARY_DIR         "@ARROWS_VXL_BINARY_DIR@/@ARROWS_VXL_DEFAULT_LIBRARY_DIR@")
set(ARROWS_VXL_LIBRARIES           @arrows_vxl_libs@)
set(ARROWS_VXL_DOCUMENTATION_DIR   "@KWIVER_DOCUMENTATION_DIR@")
set(ARROWS_VXL_PLUGIN_DIR          "${ARROWS_VXL_LIBRARY_DIR}/@kwiver_plugin_algorithm_subdir@")

set(ARROWS_VXL_CMAKE_DIR           "@ARROWS_VXL_CMAKE_DIR@")

set(ARROWS_VXL_DIR "@ARROWS_VXL_BINARY_DIR@")
