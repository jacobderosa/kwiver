# Export definitions for kwiver to be used from find_package
#include("${CMAKE_CURRENT_LIST_DIR}/arrows-colmap-config-targets.cmake")

# KWIVER version
set(ARROWS_COLMAP_VERSION_MAJOR @ARROWS_COLMAP_VERSION_MAJOR@)
set(ARROWS_COLMAP_VERSION_MINOR @ARROWS_COLMAP_VERSION_MINOR@)
set(ARROWS_COLMAP_VERSION_PATCH @ARROWS_COLMAP_VERSION_PATCH@)
set(ARROWS_COLMAP_VERSION "@ARROWS_COLMAP_VERSION@")

# COLMAP include directory
set(ARROWS_COLMAP_INCLUDE_DIRS
  "@ARROWS_COLMAP_SOURCE_DIR@"
  "@ARROWS_COLMAP_BINARY_DIR@"
  "@ARROWS_COLMAP_INCLUDE_DIRS@" )

set(ARROWS_COLMAP_TEST_INCLUDE_DIRS
  "@ARROWS_COLMAP_SOURCE_DIR@/tests"
  )

if (WIN32)
  set(SETUP_BATCH_FILES "@SETUP_BATCH_FILES@")
  add_definitions(-DBOOST_ALL_NO_LIB)
  add_definitions(-DBOOST_PROGRAM_OPTIONS_DYN_LINK)
  if(${MSVC_VERSION} GREATER_EQUAL 1915)
    # You must acknowledge that you understand MSVC
    # resolved a byte alignment issue in this compiler.
    # We get this due to using Eigen objects and
    # allocating those objects with make_shared
    add_definitions(-D_ENABLE_EXTENDED_ALIGNED_STORAGE)
  endif()
endif ()

set(ARROWS_COLMAP_DEFAULT_LIBRARY_DIR "@ARROWS_COLMAP_DEFAULT_LIBRARY_DIR@")
set(ARROWS_COLMAP_LIBRARY_DIR         "@ARROWS_COLMAP_BINARY_DIR@/@ARROWS_COLMAP_DEFAULT_LIBRARY_DIR@")
set(ARROWS_COLMAP_LIBRARIES           @arrows_colmap_libs@)
set(ARROWS_COLMAP_DOCUMENTATION_DIR   "@KWIVER_DOCUMENTATION_DIR@")

set(ARROWS_COLMAP_CMAKE_DIR           "@ARROWS_COLMAP_CMAKE_DIR@")

set(ARROWS_COLMAP_DIR "@ARROWS_COLMAP_BINARY_DIR@")
