# Export definitions for kwiver to be used from find_package
#include("${CMAKE_CURRENT_LIST_DIR}/arrows-uuid-config-targets.cmake")

# KWIVER version
set(ARROWS_UUID_VERSION_MAJOR @ARROWS_UUID_VERSION_MAJOR@)
set(ARROWS_UUID_VERSION_MINOR @ARROWS_UUID_VERSION_MINOR@)
set(ARROWS_UUID_VERSION_PATCH @ARROWS_UUID_VERSION_PATCH@)
set(ARROWS_UUID_VERSION "@ARROWS_UUID_VERSION@")

# UUID include directory
set(ARROWS_UUID_INCLUDE_DIRS
  "@ARROWS_UUID_SOURCE_DIR@"
  "@ARROWS_UUID_BINARY_DIR@"
  )

set(ARROWS_UUID_TEST_INCLUDE_DIRS
  "@ARROWS_UUID_SOURCE_DIR@/tests"
  )

if (WIN32)
  set(SETUP_BATCH_FILES "@SETUP_BATCH_FILES@")
  add_definitions(-DBOOST_ALL_NO_LIB)
  add_definitions(-DBOOST_PROGRAM_OPTIONS_DYN_LINK)
  if(${MSVC_VERSION} GREATER_EQUAL 1915)
    # You must acknowledge that you understand MSVC
    # resolved a byte alignment issue in this compiler.
    # We get this due to using Eigen objects and
    # allocating those objects with make_shared
    add_definitions(-D_ENABLE_EXTENDED_ALIGNED_STORAGE)
  endif()
endif ()

set(ARROWS_UUID_DEFAULT_LIBRARY_DIR "@ARROWS_UUID_DEFAULT_LIBRARY_DIR@")
set(ARROWS_UUID_LIBRARY_DIR         "@ARROWS_UUID_BINARY_DIR@/@ARROWS_UUID_DEFAULT_LIBRARY_DIR@")
set(ARROWS_UUID_LIBRARIES           @arrows_uuid_libs@)
set(ARROWS_UUID_DOCUMENTATION_DIR   "@KWIVER_DOCUMENTATION_DIR@")
set(ARROWS_UUID_PLUGIN_DIR          "${ARROWS_UUID_LIBRARY_DIR}/@kwiver_plugin_algorithm_subdir@")

set(ARROWS_UUID_CMAKE_DIR           "@ARROWS_UUID_CMAKE_DIR@")

set(ARROWS_UUID_DIR "@ARROWS_UUID_BINARY_DIR@")
